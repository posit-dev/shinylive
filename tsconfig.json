{
  "compilerOptions": {
    "noEmit": true,
    "jsx": "react-jsx",
    "target": "es2020",
    "module": "es2020",
    "strict": true,
    "isolatedModules": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "types": [],
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src",
    "scripts"
  ],
  "exclude": [
    "src/pyodide",
    "src/pyright",
    "**/*.test.tsx",
    "node_modules"
  ],
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Recommended"
}
