{
  "ts-node": {
    // ts-node is unsed only to run the build.ts script. It needs this option,
    // otherwise it complains about "Cannot use import statement outside a
    // module".
    "compilerOptions": {
      "module": "commonjs"
    }
  },
  "compilerOptions": {
    "jsx": "react-jsx",
    "target": "es2020",
    "module": "es2020",
    "strict": true,
    "isolatedModules": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    // Don't accidentally bring in NodeJS types which differ from browser types.
    "types": [],
    "forceConsistentCasingInFileNames": true
  },
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Recommended"
}
